{% extends 'template2.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<section id="hero" class="hero d-flex align-items-center" style="min-height: 100vh;">
		<div class="container">
			<div class="row">
				<div class="col-md-8 mx-auto">
					<div class="card rounded-3 border-1">
					<div class="card-header bg-transparent" style="color: black;"><h1 class="card-title text-center color-black">Register</h1></div>
						<div class="card-body" style="color: black;">
							{% for flash_error in app.flashes('verify_email_error') %}
								<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
							{% endfor %}

							{{ form_start(registrationForm) }}
							{{ form_row(registrationForm.nom, {
            label: 'Last Name'
          }) }}
							{{ form_row(registrationForm.prenom, {
            label: 'First Name'
          }) }}
							{{ form_row(registrationForm.email) }}
							{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
          }) }}
							{{ form_row(registrationForm.genre, {
            label: 'Gender'
          }) }}
							{{ form_row(registrationForm.gsm, {
            label: 'Phone'
          }) }}
							{{ form_row(registrationForm.agreeTerms, { label: 'I agree to terms and conditions' }) }}
							<div class="card-footer d-flex justify-content-center bg-transparent">
								<button class="btn btn-lg btn-primary" type="submit">
									Register
								</button>
							</div>
							{{ form_end(registrationForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>

	</section>
{% endblock %}
