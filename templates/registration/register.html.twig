{% extends 'template2.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<section id="hero" class="hero d-flex align-items-center">
		<div class="container">
			<div class="row">
				<div class="col-md-8 mx-auto">
					<div class="card rounded-3 border-1">
						<div class="card-body" style="color: black;">
							<h1 class="card-title text-center color-black">Register</h1>
							{% for flash_error in app.flashes('verify_email_error') %}
								<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
							{% endfor %}

							{{ form_start(registrationForm) }}
							{{ form_row(registrationForm.nom, {
            label: 'Nom'
          }) }}
							{{ form_row(registrationForm.prenom, {
            label: 'Pr√©nom'
          }) }}
							{{ form_row(registrationForm.email) }}
							{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
          }) }}
							{{ form_row(registrationForm.genre, {
            label: 'Genre'
          }) }}
							{{ form_row(registrationForm.gsm, {
            label: 'GSM'
          }) }}
							{{ form_row(registrationForm.agreeTerms, { label: 'I agree to terms and conditions' }) }}
							<div class="card-footer d-flex justify-content-center bg-transparent">
								<button class="btn btn-lg btn-primary" type="submit">
									Register
								</button>
							</div>
							{{ form_end(registrationForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>

	</section>
{% endblock %}
