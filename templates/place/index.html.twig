{% extends 'template.html.twig' %}

{% block title %}Places index{% endblock %}
{% block PageTitle %}
    <h1>Places index</h1>
{% endblock %}
{% block body %}
    

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Couverture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.id }}</td>
                <td>{{ place.type }}</td>
                <td>{{ place.couverture }}</td>
                <td>
                    <a href="{{ path('app_place_show', {'id': place.id}) }}">show</a>
                    <a href="{{ path('app_place_edit', {'id': place.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_place_new') }}">Create new</a>
{% endblock %}
