{% extends 'template2.html.twig' %}

{% block title %}Sign in
{% endblock %}

{% block body %}
<section id="hero" class="hero d-flex align-items-center" style="min-height: 100vh;">
		<div class="container">
			<div class="row">
				<div class="col-md-8 mx-auto">
					<div class="card rounded-3 border-1">
					<div class="card-header bg-transparent" style="color: black;"><h1 class="card-title text-center color-black">Sign in</h1></div>
						<div class="card-body" style="color: black;">
							<form method="post">
								{% if error %}
									<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
								{% endif %}

								{% if app.user %}
									<div class="mb-3">
										You are logged in as
										{{ app.user.userIdentifier }},
										<a href="{{ path('app_logout') }}">Logout</a>
									</div>
								{% endif %}

								<label for="inputEmail" class="my-2">Email</label>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
								<label for="inputPassword" class="my-2">Password</label>
								<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

								<div class="form-check my-2">
								
									<input class="form-check-input" type="checkbox" name="_remember_me" id="flexCheckDefault">
									<label class="form-check-label" for="flexCheckDefault">
										Remember me
									</label>
									<a style="margin-left: 531px" href="{{ path('app_forgot_password_request') }}">Forgot password?</a>
								</div>
								<div class="card-footer d-flex justify-content-center bg-transparent">
								<button class="btn btn-lg btn-primary" type="submit">
									Sign in
								</button>
							</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>

	</section>
{% endblock %}
